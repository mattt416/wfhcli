#!/usr/bin/env ruby

require 'thor'
require 'wfhcli'

module Wfh
  class Cli < Thor
    desc "categories", "List categories"
    def categories
      Wfh::Lib.list_categories
    end

    desc "companies", "List companies"
    option :page
    def companies
      if options[:page]
        Wfh::Lib.list_companies(options[:page])
      else
        Wfh::Lib.list_companies
      end
    end

    desc "jobs", "List jobs"
    option :category
    def jobs
      if options[:category]
        Wfh::Lib.list_jobs(options[:category])
      else
        Wfh::Lib.list_jobs
      end
    end

    desc "show", "Show job"
    def show(id)
      Wfh::Lib.show_job(id)
    end
  end
end

Wfh::Cli.start(ARGV)
