#!/usr/bin/env ruby

require 'thor'
require 'wfhcli'

class WfhCli < Thor
  desc "categories", "List categories"
  def categories
    list_categories
  end

  desc "companies", "List companies"
  option :page
  def companies
    if options[:page]
      list_companies(options[:page])
    else
      list_companies
    end
  end

  desc "jobs", "List jobs"
  option :category
  def jobs
    if options[:category]
      list_jobs(options[:category])
    else
      list_jobs
    end
  end

  desc "show", "Show job"
  def show(id)
    show_job(id)
  end
end

WfhCli.start(ARGV)
